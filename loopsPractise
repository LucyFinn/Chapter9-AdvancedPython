#For Loops
#Example 1 Loop through a list
fruits = ["apple", "banana", "cherry"]
for i in fruits:
    print("I like", i)
    
#Example 2  Loop through a range of numbers
for i in range(1, 6):
    print("Number:", i)
    
#Example 3 Loop using the length of my_list
my_list = ["dog", "cat", "rabbit"]
for i in range(len(my_list)):
    print("Index:", my_list, "Value:", my_list[0])
    
#While Loops
#Example 1 Count up to 5
count = 1
while count <= 5:
    print("Counting:", count)
    count += 1
    
#Example 2 Keep asking until correct answer
password = ""
while password != "python":
    password = input("Enter password: ")
print("Access granted!")

#Example 3: While loop with len(my_list)
my_list = [10, 20, 30, 40]
i = 0
while i < len(my_list):
    print("Element:",my_list[i])
    i += 1
    
#LOOP CONTROL(break + continue)
#Example 1: break stops the loop
for i in range(1, 10):
    if i == 5:
        break
    print("Breaking at:", i)

#Example 2: continue skips to next iteration
for i in range(1, 6):
    if i == 3:
        continue
    print("Skipping 3, now at:", i)
