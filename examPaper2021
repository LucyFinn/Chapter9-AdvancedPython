# Question 16(a)
# Examination Number:

# function definition used in part (v)
def is_anagram(w1, w2):
    if sorted(w1) == sorted(w2):
        return True
    else:
        return False

word1 = input("Enter the first word: ")
word2 = input("Enter the second word: ") #(i)allowing the user to input a second word

#(iv) - start
wrd1 = word1.lower()
wrd2 = word2.lower()
#(iv) - end

# test whether the sorted strings are the same as each other
# if the sorted strings are the same then they must be anagrams
if (sorted(wrd1) == sorted(wrd2)):
    print(word1, "is an anagram of", word2) #(ii)adding the variables into the print statement
else:
    print(word1, "is not an anagram of", word2) #(iii)printing is not an anagram of

#(v) - start - calling up the function
if is_anagram(word1, word2):
    print(word1, "is an anagram of", word2)
else:
    print(word1, "is not an anagram of", word2)
#(v) - end
    
#(vi) - start
phrase = input("Enter a phrase: ")
phrase = phrase.replace(" ","")
print(phrase)

if is_anagram(word1, phrase):
    print(word1, "is an anagram of", phrase)
else:
    print(word1, "is not an anagram of", phrase)
    
if is_anagram(word2, phrase):
    print(word2, "is an anagram of", phrase)
else:
    print(word2, "is not an anagram of", phrase)
#(vi) - end 
